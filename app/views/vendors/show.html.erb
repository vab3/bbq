
<p id="notice"><%= notice %></p>

<h1><%= @vendor.name %></h1>
<div><%= @vendor.website %> </div>
<% if user_signed_in? %>
  <%= link_to "Edit Vendor Info", edit_vendor_path(@vendor) %>
<% end %>
<h2>Locations</h2>

<% @locations.each do |location| %>
  <div style="margin-bottom: 1rem;">
    <%= location.address_1 %><br />
    <% if location.address_2 %><%= location.address_2 %><% end %>
    <%= location.city %>, <%= location.state %> <%= location.postal_code %><br />
    <%= location.hours %> <%= location.phone %>
  </div>

  <% if user_signed_in? %>
    <div>
      <%= link_to "Edit Location", edit_location_path(location) %>
      | <%= link_to "Delete Location", location_path(location), data: {confirm: "Are you sure?"}, method: :delete %>

    </div>
  <% end %>

<% end %>

<% if user_signed_in? %>
  <%= link_to "Add Location", new_location_path(vendor_id: @vendor.id) %>
<% end %>
