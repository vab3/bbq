  <%= form_for @vendor do |f| %>
  <p>
  <%= f.label :name %><br>
  <%= f.text_field :name %>
  </p>

  <p>
  <%= f.label :website %><br>
  <%= f.text_area :website %>
  </p>
  <p>
  <p>
  <%= f.label :status %><br>
  <%= f.select :status,
      options_for_select(
        Vendor.statuses.map {|k, v| [k.humanize.capitalize, k]},
        @vendor.status
      )
  %>
  </p>
  <p>
  <%= f.submit %>
  </p>
  <% end %>